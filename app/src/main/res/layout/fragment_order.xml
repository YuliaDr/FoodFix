<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="Количество персон" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp"
            android:text="Ваш заказ:"
            android:textSize="20sp"
            android:textColor="@color/color"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="@string/dish_1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="Блюдо 2" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подача блюд:"
            android:textSize="20sp"
            android:textColor="@color/color"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По очериди"
            android:textSize="15sp"
            android:textColor="@color/color"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="К одному времени"
            android:textSize="15sp"
            android:textColor="@color/color"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата Вашего прихода:"
            android:textSize="20sp"
            android:textColor="@color/color"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="ДД/ММ/ГГ"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Время Вашеего прихода:"
            android:textSize="20sp"
            android:textColor="@color/color"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="ЧЧ/ММ"
            android:layout_marginHorizontal="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Комментарий:"
            android:textSize="20sp"
            android:textColor="@color/color"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"/>

        <EditText
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Подтвердить заказ"/>

    </LinearLayout>

</ScrollView>